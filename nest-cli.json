{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "**/*.env",
        "watchAssets": true
      },
      {
        "include": "**/*.graphql",
        "watchAssets": true
      },
      {
        "include": "**/*.(jpg|png|gif)",
        "watchAssets": true
      }
    ],
    "plugins": [
      {
        "name": "@nestjs/swagger",
        "options": {
          "classValidatorShim": false,
          "introspectComments": true
        }
      }
    ]
  }
}
